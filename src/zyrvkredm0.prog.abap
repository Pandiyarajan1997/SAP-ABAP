MODULE FCODE.
  CASE SY-PFKEY.
    WHEN 'ABSA'.
      CASE SY-UCOMM.
        WHEN 'UEBE'.
          SET SCREEN 0. LEAVE SCREEN.
        WHEN 'ERW '.
          TVAGT-ABGRU = '##'.
          SET SCREEN 0. LEAVE SCREEN.
        WHEN 'ABBR'.
          TVAGT-ABGRU = '##'.
          SET SCREEN 0. LEAVE SCREEN.
      ENDCASE.
    WHEN 'WEIT'.
      CASE SY-UCOMM.
        WHEN 'UEBE'.
          SET SCREEN 0. LEAVE SCREEN.
        WHEN 'ERW '.
          VBKRED-SBGRP = '###'.
          SET SCREEN 0. LEAVE SCREEN.
        WHEN 'ABBR'.
          VBKRED-SBGRP = '###'.
          SET SCREEN 0. LEAVE SCREEN.
      ENDCASE.
  ENDCASE.
ENDMODULE.

MODULE SICHERN.
