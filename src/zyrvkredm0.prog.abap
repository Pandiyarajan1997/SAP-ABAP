  SET SCREEN 0. LEAVE SCREEN.
ENDMODULE.

MODULE SUPPRESS_DIALOG OUTPUT.
  SUPPRESS DIALOG.
ENDMODULE.

MODULE TVAGT_READ OUTPUT.
  CLEAR TVAGT-BEZEI.
  CHECK NOT ( TVAGT-ABGRU IS INITIAL ).
  SELECT SINGLE * FROM TVAGT WHERE SPRAS EQ SY-LANGU
                             AND   ABGRU EQ TVAGT-ABGRU.
ENDMODULE.

