    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZHR_JOBCODE WHERE
  PARVW = ZHR_JOBCODE_V-PARVW AND
  STELL = ZHR_JOBCODE_V-STELL .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZHR_JOBCODE.
    ENDIF.
ZHR_JOBCODE-MANDT =
ZHR_JOBCODE_V-MANDT .
ZHR_JOBCODE-PARVW =
ZHR_JOBCODE_V-PARVW .
