ZHR_JOBCODE_V-PARVW2 .
ZHR_JOBCODE-PERNR =
ZHR_JOBCODE_V-PERNR .
    IF SY-SUBRC = 0.
    UPDATE ZHR_JOBCODE ##WARN_OK.
    ELSE.
    INSERT ZHR_JOBCODE .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
